/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for private data and allows public read access for certain collections.
 *
 * Data Structure:
 * - User profiles and associated data (ChannelAccounts, ContentIdeas, WhatsAppSessions) are nested under `/users/{userId}`.
 * - Public data (TrendEvents, Keywords, Competitors) resides in top-level collections.
 *
 * Key Security Decisions:
 * - User-owned data is strictly controlled via path-based ownership. Only the authenticated user matching the `userId` can read or write data under their path.
 * - Public data (TrendEvents, Keywords, Competitors) is readable by anyone, but write access is not granted in this initial prototyping phase.
 * - Subscriptions are stored in a top-level collection, and no write rules are defined.
 *
 * Denormalization for Authorization:
 * - Path-based ownership is leveraged to avoid `get()` calls for authorization.
 *
 * Structural Segregation:
 * - User-specific private data and public data are stored in separate collections to simplify security rules and improve performance.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile data.
     * @path /users/{userId}
     * @allow (create) Authenticated user creates their own profile.
     * @allow (get, update, delete) Authenticated user accesses their own profile.
     * @deny (create) Authenticated user attempts to create a profile with a mismatched user ID.
     * @deny (get, update, delete) Authenticated user attempts to access another user's profile.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to channel accounts associated with a user.
     * @path /users/{userId}/channelAccounts/{channelAccountId}
     * @allow (create) Authenticated user creates a channel account under their profile.
     * @allow (get, update, delete) Authenticated user accesses their own channel accounts.
     * @deny (create) Authenticated user attempts to create a channel account under a mismatched user ID.
     * @deny (get, update, delete) Authenticated user attempts to access another user's channel accounts.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/channelAccounts/{channelAccountId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

       function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to content ideas associated with a user.
     * @path /users/{userId}/contentIdeas/{contentIdeaId}
     * @allow (create) Authenticated user creates a content idea under their profile.
     * @allow (get, update, delete) Authenticated user accesses their own content ideas.
     * @deny (create) Authenticated user attempts to create a content idea under a mismatched user ID.
     * @deny (get, update, delete) Authenticated user attempts to access another user's content ideas.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/contentIdeas/{contentIdeaId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

       function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

     /**
     * @description Controls access to WhatsApp sessions associated with a user.
     * @path /users/{userId}/whatsAppSessions/{sessionId}
     * @allow (create) Authenticated user creates a WhatsApp session under their profile.
     * @allow (get, update, delete) Authenticated user accesses their own WhatsApp sessions.
     * @deny (create) Authenticated user attempts to create a WhatsApp session under a mismatched user ID.
     * @deny (get, update, delete) Authenticated user attempts to access another user's WhatsApp sessions.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/whatsAppSessions/{sessionId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

       function isExistingOwner(userId) {
        return isOwner(userId) && resource.data != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to video metrics associated with a channel account.
     * @path /channelAccounts/{channelAccountId}/videoMetrics/{videoMetricsId}
     * @allow (get) Any user can get video metrics.
     * @deny (create, update, delete) No user can create, update, or delete video metrics.
     * @principle No write access is granted.
     */
    match /channelAccounts/{channelAccountId}/videoMetrics/{videoMetricsId} {
       allow get: if true;
       allow list: if false;
       allow create: if false;
       allow update: if false;
       allow delete: if false;
    }

    /**
     * @description Controls access to trending events.
     * @path /trendEvents/{trendEventId}
     * @allow (get, list) Any user can read trending events.
     * @deny (create, update, delete) No user can create, update, or delete trending events.
     * @principle Public read access, no write access.
     */
    match /trendEvents/{trendEventId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Controls access to subscription data.
     * @path /subscriptions/{subscriptionId}
     * @deny (get, list, create, update, delete) No user can read or write subscription data.
     * @principle No access granted.
     */
    match /subscriptions/{subscriptionId} {
      allow get: if false;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Controls access to keyword data.
     * @path /keywords/{keywordId}
     * @allow (get, list) Any user can read keyword data.
     * @deny (create, update, delete) No user can create, update, or delete keyword data.
     * @principle Public read access, no write access.
     */
    match /keywords/{keywordId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Controls access to competitor data.
     * @path /competitors/{competitorId}
     * @allow (get, list) Any user can read competitor data.
     * @deny (create, update, delete) No user can create, update, or delete competitor data.
     * @principle Public read access, no write access.
     */
    match /competitors/{competitorId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}