/**
 * @fileoverview Firestore Security Rules for CreatorX SEO Platform
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for private data while allowing public read access to shared data.
 * Data is organized to ensure authorization decisions can be made based on the path and the user's authentication state,
 * minimizing the need for complex data lookups or filtering.
 *
 * Data Structure:
 * - User-specific data (channel accounts, content ideas, WhatsApp sessions) is nested under `/users/{userId}`.
 * - Public data (trend events, keywords, competitors) is stored in top-level collections.
 *
 * Key Security Decisions:
 * - User-owned data (ChannelAccounts, ContentIdeas, WhatsAppSessions) are stored under `/users/{userId}` to simplify ownership-based security rules.
 * - Public data (TrendEvents, Keywords, Competitors) is stored in top-level collections, allowing secure list operations without complex filtering logic in security rules.
 * - The rules explicitly deny listing the `/users` collection.
 *
 * Denormalization for Authorization:
 *  - The data structure itself acts as denormalization. The `userId` is implicit in the path, making authorization checks straightforward.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user ID matches the provided user ID.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the owner of the existing document.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    /**
     * @description Rules for the /users/{userId} collection.
     * @path /users/{userId}
     * @allow (create) - Authenticated user with ID matching the userId path can create their user document.
     * @allow (get, update, delete) - Authenticated user with ID matching the userId path can read, update, or delete their user document.
     * @deny (create) - Authenticated user cannot create a user document for another user.
     * @deny (get, update, delete) - Authenticated user cannot read, update, or delete another user's document.
     * @principle Enforces document ownership and prevents unauthorized access to user profiles.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Listing all users is disallowed.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/channelAccounts/{channelAccountId} collection.
     * @path /users/{userId}/channelAccounts/{channelAccountId}
     * @allow (create, get, list, update, delete) - Authenticated user with ID matching the userId path can manage their channel accounts.
     * @deny (create, get, list, update, delete) - Authenticated user cannot manage channel accounts for another user.
     * @principle Enforces document ownership for channel accounts.
     */
    match /users/{userId}/channelAccounts/{channelAccountId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/contentIdeas/{contentIdeaId} collection.
     * @path /users/{userId}/contentIdeas/{contentIdeaId}
     * @allow (create, get, list, update, delete) - Authenticated user with ID matching the userId path can manage their content ideas.
     * @deny (create, get, list, update, delete) - Authenticated user cannot manage content ideas for another user.
     * @principle Enforces document ownership for content ideas.
     */
    match /users/{userId}/contentIdeas/{contentIdeaId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/whatsAppSessions/{sessionId} collection.
     * @path /users/{userId}/whatsAppSessions/{sessionId}
     * @allow (create, get, list, update, delete) - Authenticated user with ID matching the userId path can manage their WhatsApp sessions.
     * @deny (create, get, list, update, delete) - Authenticated user cannot manage WhatsApp sessions for another user.
     * @principle Enforces document ownership for WhatsApp sessions.
     */
    match /users/{userId}/whatsAppSessions/{sessionId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /channelAccounts/{channelAccountId}/videoMetrics/{videoMetricsId} collection.
     * @path /channelAccounts/{channelAccountId}/videoMetrics/{videoMetricsId}
     * @allow (create, get, list, update, delete) - Only the owner of the ChannelAccount can manage video metrics
     * @principle Enforces document ownership for video metrics via a parent lookup.
     */
    match /channelAccounts/{channelAccountId}/videoMetrics/{videoMetricsId} {
        allow get: if get(/databases/$(database)/documents/channelAccounts/$(channelAccountId)).data.userId == request.auth.uid;
        allow list: if get(/databases/$(database)/documents/channelAccounts/$(channelAccountId)).data.userId == request.auth.uid;
        allow create: if get(/databases/$(database)/documents/channelAccounts/$(channelAccountId)).data.userId == request.auth.uid;
        allow update: if get(/databases/$(database)/documents/channelAccounts/$(channelAccountId)).data.userId == request.auth.uid && resource != null;
        allow delete: if get(/databases/$(database)/documents/channelAccounts/$(channelAccountId)).data.userId == request.auth.uid && resource != null;
    }

    /**
     * @description Rules for the /trendEvents/{trendEventId} collection.
     * @path /trendEvents/{trendEventId}
     * @allow (get, list) - Public read access to trend events.
     * @deny (create, update, delete) - Only authorized admin can write trend events.
     * @principle Allows public read access to trending events, while restricting write access.
     */
    match /trendEvents/{trendEventId} {
      allow get: if true;
      allow list: if true;
      allow create: if false; // TODO: Add admin role check for write access
      allow update: if false; // TODO: Add admin role check for write access
      allow delete: if false; // TODO: Add admin role check for write access
    }

    /**
     * @description Rules for the /subscriptions/{subscriptionId} collection.
     * @path /subscriptions/{subscriptionId}
     * @allow (get, list) - Public read access to subscriptions.
     * @deny (create, update, delete) - Only authorized admin can write subscription.
     * @principle Allows public read access to subscriptions, while restricting write access.
     */
    match /subscriptions/{subscriptionId} {
      allow get: if true;
      allow list: if true;
      allow create: if false; // TODO: Add admin role check for write access
      allow update: if false; // TODO: Add admin role check for write access
      allow delete: if false; // TODO: Add admin role check for write access
    }

    /**
     * @description Rules for the /keywords/{keywordId} collection.
     * @path /keywords/{keywordId}
     * @allow (get, list) - Public read access to keywords.
     * @deny (create, update, delete) - Only authorized admin can write keyword.
     * @principle Allows public read access to keywords, while restricting write access.
     */
    match /keywords/{keywordId} {
      allow get: if true;
      allow list: if true;
      allow create: if false; // TODO: Add admin role check for write access
      allow update: if false; // TODO: Add admin role check for write access
      allow delete: if false; // TODO: Add admin role check for write access
    }

    /**
     * @description Rules for the /competitors/{competitorId} collection.
     * @path /competitors/{competitorId}
     * @allow (get, list) - Public read access to competitors.
     * @deny (create, update, delete) - Only authorized admin can write competitor.
     * @principle Allows public read access to competitors, while restricting write access.
     */
    match /competitors/{competitorId} {
      allow get: if true;
      allow list: if true;
      allow create: if false; // TODO: Add admin role check for write access
      allow update: if false; // TODO: Add admin role check for write access
      allow delete: if false; // TODO: Add admin role check for write access
    }
  }
}