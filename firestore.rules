/**
 * @fileOverview Firestore Security Rules for CreatorX SEO Platform.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for private data while allowing public read access for certain global collections.
 * All user-specific data is nested under the `/users/{userId}` path, enabling path-based authorization.
 *
 * Data Structure:
 * - `/users/{userId}`: Stores user profiles.
 * - `/users/{userId}/channelAccounts/{channelAccountId}`: Stores channel accounts associated with a user.
 * - `/users/{userId}/contentIdeas/{contentIdeaId}`: Stores content ideas generated by a user.
 * - `/users/{userId}/whatsAppSessions/{sessionId}`: Stores WhatsApp session data for a user.
 * - `/channelAccounts/{channelAccountId}/videoMetrics/{videoMetricsId}`: Stores video metrics associated with a channel account.
 * - `/trendEvents/{trendEventId}`: Stores trending events (publicly readable).
 * - `/subscriptions/{subscriptionId}`: Stores subscription data.
 * - `/keywords/{keywordId}`: Stores keyword data (publicly readable).
 * - `/competitors/{competitorId}`: Stores competitor data (publicly readable).
 *
 * Key Security Decisions:
 * - Strict user-ownership: Only the authenticated user can create, read, update, or delete data under their `/users/{userId}` path.
 * - Public read access: `/trendEvents`, `/keywords`, and `/competitors` collections are publicly readable.
 * - No user listing: Listing of users is disallowed.
 * - Authorization Independence: Path-based ownership avoids the need for `get()` calls to determine authorization.
 *
 * Denormalization for Authorization:
 *  - The data model uses path-based ownership to avoid `get()` calls. For example, a content idea is stored under `/users/{userId}/contentIdeas/{contentIdeaId}`,
 *  allowing security rules to simply check `request.auth.uid == userId`.
 *
 * Structural Segregation:
 * - Public data (TrendEvents, Keywords, Competitors) is stored in top-level collections, allowing secure list operations.
 * - User-specific data is segregated under the `/users/{userId}` path, enabling secure listing of user-owned entities.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile data.
     * @path /users/{userId}
     * @allow (create) User with matching ID can create their own profile.
     * @allow (get, update, delete) User with matching ID can access and modify their profile.
     * @deny (create) User cannot create a profile with a mismatched ID.
     * @deny (get, update, delete) User cannot access or modify another user's profile.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to channel accounts associated with a user.
     * @path /users/{userId}/channelAccounts/{channelAccountId}
     * @allow (create) User with matching ID can create channel accounts.
     * @allow (get, update, delete) User with matching ID can access and modify their channel accounts.
     * @deny (create) User cannot create a channel account with a mismatched user ID.
     * @deny (get, update, delete) User cannot access or modify another user's channel accounts.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/channelAccounts/{channelAccountId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to content ideas generated by a user.
     * @path /users/{userId}/contentIdeas/{contentIdeaId}
     * @allow (create) User with matching ID can create content ideas.
     * @allow (get, update, delete) User with matching ID can access and modify their content ideas.
     * @deny (create) User cannot create a content idea with a mismatched user ID.
     * @deny (get, update, delete) User cannot access or modify another user's content ideas.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/contentIdeas/{contentIdeaId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
       function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to WhatsApp session data for a user.
     * @path /users/{userId}/whatsAppSessions/{sessionId}
     * @allow (create) User with matching ID can create WhatsApp sessions.
     * @allow (get, update, delete) User with matching ID can access and modify their WhatsApp sessions.
     * @deny (create) User cannot create a WhatsApp session with a mismatched user ID.
     * @deny (get, update, delete) User cannot access or modify another user's WhatsApp sessions.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/whatsAppSessions/{sessionId} {
       function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
       function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to video metrics associated with a channel account.
     * @path /channelAccounts/{channelAccountId}/videoMetrics/{videoMetricsId}
     * @allow (get, list) Any user can read video metrics.
     * @deny (create, update, delete) Only the application can create, update, and delete video metrics.
     * @principle Restricts write access to the application.
     */
    match /channelAccounts/{channelAccountId}/videoMetrics/{videoMetricsId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to trending events.
     * @path /trendEvents/{trendEventId}
     * @allow (get, list) Any user can read trending events.
     * @deny (create, update, delete) Only the application can create, update, and delete trending events.
     * @principle Allows public read access and restricts write access.
     */
    match /trendEvents/{trendEventId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to subscription data.
     * @path /subscriptions/{subscriptionId}
     * @allow (get, list) Any user can read subscriptions.
     * @deny (create, update, delete) Only the application can create, update, and delete subscriptions.
     */
    match /subscriptions/{subscriptionId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to keyword data.
     * @path /keywords/{keywordId}
     * @allow (get, list) Any user can read keywords.
     * @deny (create, update, delete) Only the application can create, update, and delete keywords.
     * @principle Allows public read access and restricts write access.
     */
    match /keywords/{keywordId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to competitor data.
     * @path /competitors/{competitorId}
     * @allow (get, list) Any user can read competitor data.
     * @deny (create, update, delete) Only the application can create, update, and delete competitor data.
     * @principle Allows public read access and restricts write access.
     */
    match /competitors/{competitorId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }
}