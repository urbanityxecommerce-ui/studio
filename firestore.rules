/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for private data and allows public read access for shared data.
 *
 * Data Structure:
 * - User-specific data (channelAccounts, contentIdeas, whatsAppSessions) is nested under /users/{userId}.
 * - Public data (trendEvents, keywords, competitors) is stored in top-level collections.
 * - User profiles are stored under `/users/{userId}`.
 *
 * Key Security Decisions:
 * - Enforces ownership for all write operations on user-specific data.
 * - Allows public read access for trendEvents, keywords, and competitors collections.
 * - Disallows listing of subscriptions by default; read access is only permitted via `get` request.
 * - Data shape is not strictly validated to allow rapid iteration. Only authorization-critical fields are validated.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secure the root user profiles collection to only allow access to the authenticated user.
     * @path /users/{userId}
     * @allow (create) - Authenticated user creates their own profile (auth.uid == userId).
     * @allow (get, list, update, delete) - Authenticated user accesses their own profile (auth.uid == userId).
     * @deny (create) - Authenticated user attempts to create a profile with a different userId.
     * @deny (get, list, update, delete) - Authenticated user attempts to access another user's profile.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secure the channelAccounts subcollection to only allow access to the owning user.
     * @path /users/{userId}/channelAccounts/{channelAccountId}
     * @allow (create) - Authenticated user creates a channelAccount under their own profile (auth.uid == userId).
     * @allow (get, list, update, delete) - Authenticated user accesses their own channelAccount (auth.uid == userId).
     * @deny (create) - Authenticated user attempts to create a channelAccount under a different userId.
     * @deny (get, list, update, delete) - Authenticated user attempts to access another user's channelAccount.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/channelAccounts/{channelAccountId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secure the contentIdeas subcollection to only allow access to the owning user.
     * @path /users/{userId}/contentIdeas/{contentIdeaId}
     * @allow (create) - Authenticated user creates a contentIdea under their own profile (auth.uid == userId).
     * @allow (get, list, update, delete) - Authenticated user accesses their own contentIdea (auth.uid == userId).
     * @deny (create) - Authenticated user attempts to create a contentIdea under a different userId.
     * @deny (get, list, update, delete) - Authenticated user attempts to access another user's contentIdea.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/contentIdeas/{contentIdeaId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secure the whatsAppSessions subcollection to only allow access to the owning user.
     * @path /users/{userId}/whatsAppSessions/{sessionId}
     * @allow (create) - Authenticated user creates a whatsAppSession under their own profile (auth.uid == userId).
     * @allow (get, list, update, delete) - Authenticated user accesses their own whatsAppSession (auth.uid == userId).
     * @deny (create) - Authenticated user attempts to create a whatsAppSession under a different userId.
     * @deny (get, list, update, delete) - Authenticated user attempts to access another user's whatsAppSession.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/whatsAppSessions/{sessionId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secure the videoMetrics subcollection to only allow access.
     * @path /channelAccounts/{channelAccountId}/videoMetrics/{videoMetricsId}
     */
    match /channelAccounts/{channelAccountId}/videoMetrics/{videoMetricsId} {
      allow get: if false;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows public read access to trendEvents.
     * @path /trendEvents/{trendEventId}
     * @allow (get, list) - Any user can read trendEvents.
     * @deny (create, update, delete) - Only authenticated users can create, update, or delete trendEvents.
     * @principle Allows public read access with restricted write access.
     */
    match /trendEvents/{trendEventId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Secure the subscriptions collection.
     * @path /subscriptions/{subscriptionId}
     */
    match /subscriptions/{subscriptionId} {
      allow get: if false;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows public read access to keywords.
     * @path /keywords/{keywordId}
     * @allow (get, list) - Any user can read keywords.
     * @deny (create, update, delete) - Only authenticated users can create, update, or delete keywords.
     * @principle Allows public read access with restricted write access.
     */
    match /keywords/{keywordId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows public read access to competitors.
     * @path /competitors/{competitorId}
     * @allow (get, list) - Any user can read competitors.
     * @deny (create, update, delete) - Only authenticated users can create, update, or delete competitors.
     * @principle Allows public read access with restricted write access.
     */
    match /competitors/{competitorId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}