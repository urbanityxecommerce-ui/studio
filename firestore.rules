/**
 * @fileoverview Firestore Security Rules for CreatorX SEO Platform
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for private data,
 * while allowing public read access to certain collections. All user-specific
 * data is nested under the `/users/{userId}` path.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles.
 * - /users/{userId}/channelAccounts/{channelAccountId}: Stores channel accounts linked to a user.
 * - /users/{userId}/contentIdeas/{contentIdeaId}: Stores content ideas generated by a user.
 * - /users/{userId}/whatsAppSessions/{sessionId}: Stores WhatsApp session data for a user.
 * - /channelAccounts/{channelAccountId}/videoMetrics/{videoMetricsId}: Stores video metrics for channel accounts.
 * - /trendEvents/{trendEventId}: Stores trending events (publicly readable).
 * - /subscriptions/{subscriptionId}: Stores subscription data.
 * - /keywords/{keywordId}: Stores keyword data (publicly readable).
 * - /competitors/{competitorId}: Stores competitor data (publicly readable).
 *
 * Key Security Decisions:
 * - User data is strictly isolated and accessible only to the authenticated user.
 * - Public collections (trendEvents, keywords, competitors) are readable by anyone.
 * - Listing of user documents is allowed only for the owner.
 * - Write access to public collections is not currently defined and must be secured later.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secure user profiles. Only the authenticated user can read and write their own profile.
     * @path /users/{userId}
     * @allow (create) - Authenticated user with request.auth.uid == userId
     * @allow (get, list, update, delete) - Authenticated user with request.auth.uid == userId
     * @deny (create) - Authenticated user with request.auth.uid != userId
     * @deny (get, list, update, delete) - Unauthenticated user
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secure channel accounts. Only the owner can manage their channel accounts.
     * @path /users/{userId}/channelAccounts/{channelAccountId}
     * @allow (create) - Authenticated user with request.auth.uid == userId
     * @allow (get, list, update, delete) - Authenticated user with request.auth.uid == userId
     * @deny (create) - Authenticated user with request.auth.uid != userId
     * @deny (get, list, update, delete) - Unauthenticated user
     * @principle Enforces path-based ownership.
     */
    match /users/{userId}/channelAccounts/{channelAccountId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secure content ideas. Only the owner can manage their content ideas.
     * @path /users/{userId}/contentIdeas/{contentIdeaId}
     * @allow (create) - Authenticated user with request.auth.uid == userId
     * @allow (get, list, update, delete) - Authenticated user with request.auth.uid == userId
     * @deny (create) - Authenticated user with request.auth.uid != userId
     * @deny (get, list, update, delete) - Unauthenticated user
     * @principle Enforces path-based ownership.
     */
    match /users/{userId}/contentIdeas/{contentIdeaId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secure WhatsApp sessions. Only the owner can manage their WhatsApp sessions.
     * @path /users/{userId}/whatsAppSessions/{sessionId}
     * @allow (create) - Authenticated user with request.auth.uid == userId
     * @allow (get, list, update, delete) - Authenticated user with request.auth.uid == userId
     * @deny (create) - Authenticated user with request.auth.uid != userId
     * @deny (get, list, update, delete) - Unauthenticated user
     * @principle Enforces path-based ownership.
     */
    match /users/{userId}/whatsAppSessions/{sessionId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secure video metrics. Access is allowed based on channel account ownership.
     * @path /channelAccounts/{channelAccountId}/videoMetrics/{videoMetricsId}
     * @allow (get) - Anyone
     * @allow (list) - Anyone
     * @deny (create, update, delete) - No write access defined for this collection.
     * @principle Restricts write access to video metrics.
     */
    match /channelAccounts/{channelAccountId}/videoMetrics/{videoMetricsId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allow public read access to trending events.
     * @path /trendEvents/{trendEventId}
     * @allow (get) - Anyone
     * @allow (list) - Anyone
     * @deny (create, update, delete) - No write access defined for this collection.
     * @principle Public read access with restricted writes.
     */
    match /trendEvents/{trendEventId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Secure subscription data.
     * @path /subscriptions/{subscriptionId}
     * @deny (get, list, create, update, delete) - No access defined for this collection.
     */
    match /subscriptions/{subscriptionId} {
      allow get: if false;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allow public read access to keyword data.
     * @path /keywords/{keywordId}
     * @allow (get) - Anyone
     * @allow (list) - Anyone
     * @deny (create, update, delete) - No write access defined for this collection.
     * @principle Public read access with restricted writes.
     */
    match /keywords/{keywordId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allow public read access to competitor data.
     * @path /competitors/{competitorId}
     * @allow (get) - Anyone
     * @allow (list) - Anyone
     * @deny (create, update, delete) - No write access defined for this collection.
     * @principle Public read access with restricted writes.
     */
    match /competitors/{competitorId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}