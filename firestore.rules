/**
 * @fileoverview Firestore Security Rules for CreatorX SEO Platform
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for personal data and allows public read access for shared data.
 *
 * Data Structure:
 * - User-specific data (channel accounts, content ideas, WhatsApp sessions) is nested under `/users/{userId}`.
 * - Public data (trend events, keywords, competitors) resides in top-level collections.
 *
 * Key Security Decisions:
 * - User data is segregated under the /users/{userId} path to simplify ownership checks.
 * - Public read access is granted for collections like TrendEvents, Keywords and Competitors.
 * - Subscriptions are stored in a top-level collection.
 *
 * Denormalization for Authorization:
 *  - User ID is used in the path for private collections to avoid the need for get() requests to check ownership.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile data.
     * @path /users/{userId}
     * @allow (create) - Authenticated user creates their own profile if the userId matches their auth.uid.
     * @allow (get, update, delete) - Authenticated user can access and modify their own profile data if the userId matches their auth.uid.
     * @deny (create) - Creating a user document with a userId that doesn't match the authenticated user's ID.
     * @deny (list) - Listing all users is not permitted.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == request.auth.uid;
      allow update: if isSignedIn() && isOwner(userId) && resource != null && request.resource.data.id == resource.data.id;
      allow delete: if isSignedIn() && isOwner(userId) && resource != null;
    }

    /**
     * @description Controls access to channel accounts associated with a user.
     * @path /users/{userId}/channelAccounts/{channelAccountId}
     * @allow (create) - Authenticated user creates a channel account under their user ID.
     * @allow (get, list, update, delete) - Authenticated user can access and modify their channel accounts if the userId matches their auth.uid.
     * @deny (create) - Creating a channel account with a userId that doesn't match the authenticated user's ID.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/channelAccounts/{channelAccountId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isSignedIn() && isOwner(userId) && resource != null;
      allow delete: if isSignedIn() && isOwner(userId) && resource != null;
    }

    /**
     * @description Controls access to content ideas generated by a user.
     * @path /users/{userId}/contentIdeas/{contentIdeaId}
     * @allow (create) - Authenticated user creates a content idea under their user ID.
     * @allow (get, list, update, delete) - Authenticated user can access and modify their content ideas if the userId matches their auth.uid.
     * @deny (create) - Creating a content idea with a userId that doesn't match the authenticated user's ID.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/contentIdeas/{contentIdeaId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isSignedIn() && isOwner(userId) && resource != null;
      allow delete: if isSignedIn() && isOwner(userId) && resource != null;
    }

    /**
     * @description Controls access to WhatsApp session data for a user.
     * @path /users/{userId}/whatsAppSessions/{sessionId}
     * @allow (create) - Authenticated user creates a WhatsApp session under their user ID.
     * @allow (get, list, update, delete) - Authenticated user can access and modify their WhatsApp sessions if the userId matches their auth.uid.
     * @deny (create) - Creating a WhatsApp session with a userId that doesn't match the authenticated user's ID.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/whatsAppSessions/{sessionId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isSignedIn() && isOwner(userId) && resource != null;
      allow delete: if isSignedIn() && isOwner(userId) && resource != null;
    }

    /**
     * @description Controls access to video metrics associated with a channel account.
     * @path /channelAccounts/{channelAccountId}/videoMetrics/{videoMetricsId}
     * @allow (get, list) - Public read access to video metrics.
     * @deny (create, update, delete) - Only authenticated users can create, update, or delete video metrics.
     * @principle Allows public read access and restricts write access.
     */
    match /channelAccounts/{channelAccountId}/videoMetrics/{videoMetricsId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to trending events.
     * @path /trendEvents/{trendEventId}
     * @allow (get, list) - Public read access to trending events.
     * @deny (create, update, delete) - Only authenticated users can create, update, or delete trending events.
     * @principle Allows public read access and restricts write access.
     */
    match /trendEvents/{trendEventId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to subscription data.
     * @path /subscriptions/{subscriptionId}
     * @allow (get, list) - Public read access to subscription data.
     * @deny (create, update, delete) - Only authenticated users can create, update, or delete subscription data.
     * @principle Allows public read access and restricts write access.
     */
    match /subscriptions/{subscriptionId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to keyword data.
     * @path /keywords/{keywordId}
     * @allow (get, list) - Public read access to keyword data.
     * @deny (create, update, delete) - Only authenticated users can create, update, or delete keyword data.
     * @principle Allows public read access and restricts write access.
     */
    match /keywords/{keywordId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to competitor data.
     * @path /competitors/{competitorId}
     * @allow (get, list) - Public read access to competitor data.
     * @deny (create, update, delete) - Only authenticated users can create, update, or delete competitor data.
     * @principle Allows public read access and restricts write access.
     */
    match /competitors/{competitorId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }
}