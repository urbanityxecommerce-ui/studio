/**
 * @fileOverview
 * This ruleset enforces a strict user-ownership model for private data and allows public read access to certain collections.
 *
 * Data Structure:
 * - User-specific data (channel accounts, content ideas, WhatsApp sessions) is nested under `/users/{userId}`.
 * - Public data (trend events, keywords, competitors) resides in top-level collections.
 *
 * Key Security Decisions:
 * - User data is strictly segregated to prevent unauthorized access.
 * - Public data is accessible to all users for reading.
 * - Write access to public collections is not granted in this prototype.
 * - The rules explicitly deny any operations not explicitly allowed.
 * - Subscriptions are stored in a top-level collection but write access is denied.
 *
 * Denormalization for Authorization:
 *  - Data is structured under `/users/{userId}` for simple path-based authorization, avoiding the need for `get()` calls to determine ownership.
 *
 * Structural Segregation:
 *  - Public data (TrendEvents, Keywords, Competitors) is stored in top-level collections, while private user data is stored under `/users/{userId}`.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile data.
     * @path /users/{userId}
     * @allow (create) - Authenticated user creates their own profile.
     * @allow (get, update, delete) - Authenticated user accesses their own profile.
     * @deny (create) - Authenticated user tries to create another user's profile.
     * @deny (get, update, delete) - Authenticated user tries to access another user's profile.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == request.auth.uid;
      allow update: if isSignedIn() && isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to channel accounts owned by a user.
     * @path /users/{userId}/channelAccounts/{channelAccountId}
     * @allow (create, get, list, update, delete) - Authenticated user accesses their own channel accounts.
     * @deny (create, get, list, update, delete) - Authenticated user tries to access another user's channel accounts.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/channelAccounts/{channelAccountId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to content ideas owned by a user.
     * @path /users/{userId}/contentIdeas/{contentIdeaId}
     * @allow (create, get, list, update, delete) - Authenticated user accesses their own content ideas.
     * @deny (create, get, list, update, delete) - Authenticated user tries to access another user's content ideas.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/contentIdeas/{contentIdeaId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to WhatsApp sessions owned by a user.
     * @path /users/{userId}/whatsAppSessions/{sessionId}
     * @allow (create, get, list, update, delete) - Authenticated user accesses their own WhatsApp sessions.
     * @deny (create, get, list, update, delete) - Authenticated user tries to access another user's WhatsApp sessions.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/whatsAppSessions/{sessionId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to video metrics associated with a channel account.
     * @path /channelAccounts/{channelAccountId}/videoMetrics/{videoMetricsId}
     * @allow (get, list) - Public read access to video metrics.
     * @deny (create, update, delete) - No write access allowed.
     */
    match /channelAccounts/{channelAccountId}/videoMetrics/{videoMetricsId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to trending events.
     * @path /trendEvents/{trendEventId}
     * @allow (get, list) - Public read access to trending events.
     * @deny (create, update, delete) - No write access allowed.
     */
    match /trendEvents/{trendEventId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to subscriptions.
     * @path /subscriptions/{subscriptionId}
     * @allow (get, list) - Public read access to subscriptions.
     * @deny (create, update, delete) - No write access allowed.
     */
    match /subscriptions/{subscriptionId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to keywords.
     * @path /keywords/{keywordId}
     * @allow (get, list) - Public read access to keywords.
     * @deny (create, update, delete) - No write access allowed.
     */
    match /keywords/{keywordId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to competitors.
     * @path /competitors/{competitorId}
     * @allow (get, list) - Public read access to competitors.
     * @deny (create, update, delete) - No write access allowed.
     */
    match /competitors/{competitorId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }

  // Helper Functions
  function isSignedIn() {
    return request.auth != null;
  }

  function isOwner(userId) {
    return request.auth.uid == userId;
  }

  function isExistingOwner(userId) {
    return isSignedIn() && isOwner(userId) && resource != null;
  }
}